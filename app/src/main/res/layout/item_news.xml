<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/real_left"
        android:layout_margin="10dp"
        android:background="@color/deepskyblue">
    <TextView
         android:id="@+id/tv_day"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
         android:text="1"
         android:textSize="14dp"
         android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_year"
            android:layout_below="@+id/tv_day"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/9"
            android:textSize="12dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/real_left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_content_title"
            android:layout_marginTop="7dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/tv_platform"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台"
                android:padding="2dp"
                android:textSize="12dp"
                android:textColor="@color/deepskyblue"
                android:background="@drawable/shape_blue_textview"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_source"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_platform"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_count_read"
                android:textSize="12dp"
                android:layout_alignParentBottom="true"
                android:text="阅读"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:id="@+id/tv_count"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/tv_count_read"
                android:textSize="12dp"
                android:text="5"
                android:textColor="@color/red"/>

        </RelativeLayout>




    </RelativeLayout>

