<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
    android:background="@color/silver"
        >
    <include layout="@layout/top_view"
        android:id="@+id/top_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_view"
        android:orientation="vertical"
        android:layout_above="@+id/lin_bottom"

        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ib_search"
                android:layout_margin="5dp"
                android:focusableInTouchMode="false"
                android:hint="请输入企业名称的关键字进行高级检索"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/ib_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/search"
                />
        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/check_lin_view_style"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="220dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="60px"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="天津市大河食品有限公司"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/black"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="统一社会信用代码："
                    android:textColor="@color/black"
                    android:textSize="45px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="QS123456789880S"
                    android:textColor="@color/red"
                    android:textSize="45px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="企业负责人　　　："
                    android:textColor="@color/black"
                    android:textSize="45px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="里江山"
                    android:textColor="@color/red"
                    android:textSize="45px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="负责人电话　　　："
                    android:textColor="@color/black"
                    android:textSize="45px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="15545123366"
                    android:textColor="@color/red"
                    android:textSize="45px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="企业地址　　　　："
                    android:textColor="@color/black"
                    android:textSize="45px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="南开区芥园道179号底商"
                    android:textColor="@color/red"
                    android:textSize="45px"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/check_btn_style"
                    android:text="企业详情"
                    android:id="@+id/bt_detail"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/check_btn_style"
                    android:text="历史记录"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/bt_detail"
                    android:id="@+id/bt_checkhistory"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/check_btn_style"
                    android:text="问题处置"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/bt_checkhistory"
                    android:id="@+id/bt_question"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/check_btn_style"
                    android:text="开始检查"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/bt_question"
                    android:id="@+id/bt_check"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:id="@+id/lin_bottom"
        android:background="@color/btnblue"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <include layout="@layout/bottom_view"
                />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
