<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
    android:background="@color/silver"
        >
    <include layout="@layout/top_view"
        android:id="@+id/top_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/top_view"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lin_banner"
        android:layout_margin="10dp"
        android:layout_above="@+id/lin_bottom"
        android:background="@drawable/check_lin_view_style"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/boder_view"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="65px"
            android:layout_marginTop="10dp"
            android:text="告知页"/>
            <View
                android:layout_width="200px"
                android:layout_gravity="center_horizontal"
                android:layout_height="0.01dp"
                android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="被检查单位："
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="50px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text="天津是大河食品有限公司"
                android:textSize="50px"/>
        </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="地址："
                android:gravity="right"
                android:textSize="50px"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:focusableInTouchMode="false"
                android:text="天津市南开区什么什么什么道路"
                android:textSize="50px"/>
        </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="检查人员1："
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="50px"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/names"/>
        </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="检查人员2："
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="50px"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/names"/>
        </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="检查时间："
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="50px"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/names"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.01dp"
                android:background="@color/black"/>
        </LinearLayout>
</LinearLayout>



    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:id="@+id/lin_bottom"
        android:background="@color/btnblue"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <include layout="@layout/bottom_view"
                />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
