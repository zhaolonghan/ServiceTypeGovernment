<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="70dp"
     tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lin_foot1"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_index"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sy02"/>
        <TextView
            android:id="@+id/tv_index"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_foot2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_message"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tz02"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知公告"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_foot3"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_legal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/fl02"/>
        <TextView
            android:id="@+id/tv_legal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法律法规"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_foot4"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_news"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/xw02"/>
        <TextView
            android:id="@+id/tv_news"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻动态"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_foot5"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_my_center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/gr02"/>
        <TextView
            android:id="@+id/tv_my_center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"/>
    </LinearLayout>
</LinearLayout>
